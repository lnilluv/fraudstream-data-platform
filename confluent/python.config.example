# Required connection configs for Kafka producer, consumer, and admin
bootstrap.servers=pkc-xxxxx.region.provider.confluent.cloud:9092
security.protocol=SASL_SSL
sasl.mechanisms=PLAIN
sasl.username=replace-me
sasl.password=replace-me

# Best practice for higher availability in librdkafka clients prior to 1.7
session.timeout.ms=45000

# Platform topic conventions
# KAFKA_MAIN_TOPIC defaults to fraud_detection.v1 in producer/consumer scripts
# retry and dlq topics are derived automatically as:
# fraud_detection.v1.retry and fraud_detection.v1.dlq

# Required connection configs for Confluent Cloud Schema Registry
schema.registry.url=https://replace-me
basic.auth.credentials.source=USER_INFO
basic.auth.user.info=replace-me:replace-me
